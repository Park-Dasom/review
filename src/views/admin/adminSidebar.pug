//- BEGIN: Header
nav.header-navbar.navbar.navbar-expand-lg.align-items-center.floating-nav.navbar-light.navbar-shadow.container-xxl
  .navbar-container.d-flex.content
    .bookmark-wrapper.d-flex.align-items-center
      ul.nav.navbar-nav.d-xl-none
        li.nav-item
          a.nav-link.menu-toggle(href='javascript:void(0);')
            i.ficon(data-feather='menu')
    ul.nav.navbar-nav.align-items-center.ml-auto
      //- 다크모드 전환
      li.nav-item.d-none.d-lg-block
        a.nav-link.nav-link-style
          i.ficon(data-feather='moon')
      li.nav-item.dropdown.dropdown-user
        a#dropdown-user.nav-link.dropdown-toggle.dropdown-user-link(href='javascript:void(0);' data-toggle='dropdown' aria-haspopup='true' aria-expanded='false')
          .user-nav.d-sm-flex.d-none
            if loggedUser
              span.user-name.font-weight-bolder=`${loggedUser.userID}`
              span.user-status=`${loggedUser.role === "master" ? "마스터" : "일반"}관리자`
//- END: Header
//- BEGIN: Main Menu
.main-menu.menu-fixed.menu-light.menu-accordion.menu-shadow(data-scroll-to-active='true')
  .navbar-header
    ul.nav.navbar-nav.flex-row
      li.nav-item.mr-auto
        a.navbar-brand(href=`${routes.admin}${routes.adminUser}`)
          //- 로고이미지 추가 영역
          h2.brand-text=siteName
      li.nav-item.nav-toggle
        a.nav-link.modern-nav-toggle.pr-0(data-toggle='collapse')
          i.d-block.d-xl-none.text-primary.toggle-icon.font-medium-4(data-feather='x')
          i.d-none.d-xl-block.collapse-toggle-icon.font-medium-4.text-primary(data-feather='disc' data-ticon='disc')
  .shadow-bottom
  .main-menu-content
    ul#main-menu-navigation.navigation.navigation-main(data-menu='menu-navigation')
      //- 계정 관리
      li.navigation-header
        span 계정 관리
        svg.feather.feather-more-horizontal(xmlns='http://www.w3.org/2000/svg' width='14' height='14' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
          circle(cx='12' cy='12' r='1')
          circle(cx='19' cy='12' r='1')
          circle(cx='5' cy='12' r='1')
      li.nav-item#admin__menu-user
        a.d-flex.align-items-center(href=`${routes.admin}`)
          i(data-feather='user')
          span.menu-title.text-truncate 관리자 계정 관리
      //- 샘플 관리
      li.navigation-header
        span 상품 관리
        svg.feather.feather-more-horizontal(xmlns='http://www.w3.org/2000/svg' width='14' height='14' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
          circle(cx='12' cy='12' r='1')
          circle(cx='19' cy='12' r='1')
          circle(cx='5' cy='12' r='1')
      li.nav-item#admin__menu-merchandise
        a.d-flex.align-items-center(href=`${routes.admin}${routes.adminMerchandise}`)
          i(data-feather='folder')
          span.menu-title.text-truncate 상품 관리
      //- Settings
      li.navigation-header
        span Settings
        svg.feather.feather-more-horizontal(xmlns='http://www.w3.org/2000/svg' width='14' height='14' viewBox='0 0 24 24' fill='none' stroke='currentColor' stroke-width='2' stroke-linecap='round' stroke-linejoin='round')
          circle(cx='12' cy='12' r='1')
          circle(cx='19' cy='12' r='1')
          circle(cx='5' cy='12' r='1')
      li.nav-item
        a.d-flex.align-items-center(href=`${routes.admin}${routes.adminChangePW}`)
          i(data-feather='lock')
          span.menu-title.text-truncate 비밀번호 변경
      //- 로그아웃
      li.nav-item
        a.d-flex.align-items-center(href=`${routes.admin}${routes.adminLogout}`)
          i(data-feather='power')
          span.menu-title.text-truncate 로그아웃
//- END: Main Menu